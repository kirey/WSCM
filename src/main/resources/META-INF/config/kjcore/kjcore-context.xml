<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
                           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd">
    
    <!-- Enable annotations -->    
    <context:annotation-config/>
    
    <!-- Enable detecting beans which don't implement intefaces -->
    <aop:config proxy-target-class="true"/>

	<context:component-scan base-package="com.kirey.kjcore.features.report" />
	<context:component-scan base-package="com.kirey.kjcore.common.util" />
	<context:component-scan base-package="com.kirey.kjcore.data.compositedao" />
	<context:component-scan base-package="com.kirey.kjcore.features.email" />
	<context:component-scan base-package="com.kirey.kjcore.data.dao" />
	<context:component-scan base-package="com.kirey.kjcore.features.exception" />
	<context:component-scan base-package="com.kirey.kjcore.features.cache" />
	<context:component-scan base-package="com.kirey.kjcore.features.internationalization" />
	<context:component-scan base-package="com.kirey.kjcore.features.scheduling" />
	<context:component-scan base-package="com.kirey.kjcore.api.pagemappers" />
	<context:component-scan base-package="com.kirey.kjcore.features.classloading" />
	<context:component-scan base-package="com.kirey.kjcore.features.security" />
	<context:component-scan base-package="com.kirey.kjcore.validations" />

   	<!-- Property file  -->
	<context:property-placeholder location="classpath:application.properties" />

		<!-- Used if we want to set a default timezone for server -->
	<bean id="defaultZoneInfo" class="sun.util.calendar.ZoneInfo"
		factory-method="getTimeZone">
		<constructor-arg type="java.lang.String" value="UTC"/>
	</bean>

	<bean
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="staticMethod" value="java.util.TimeZone.setDefault" />
		<property name="arguments">
			<list>
				<ref bean="defaultZoneInfo" />
			</list>
		</property>
	</bean>

	<bean id="properties"
		class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="locations" value="classpath:application.properties"></property>
	</bean>
	
	<!-- Internationalization - singleton -->	
	<bean id="translation"	class="com.kirey.kjcore.features.internationalization.Translation" scope="singleton" />

	<!-- associate custom module to object mapper in order to handle also the serialization of lazy fields -->	
	<bean id="hibernate5Module" class="com.kirey.kjcore.common.util.Hibernate5Module" />
	
	<bean
		class="org.springframework.http.converter.json.Jackson2ObjectMapperFactoryBean">
		<property name="modules" ref="hibernate5Module" />
	</bean>
	 
	 <!-- Class Loading -->
	<bean id="baseObjectFactory" class="com.kirey.kjcore.features.classloading.BaseObjectFactory" scope="singleton"/>
	 
	<!-- file upload -->
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver"  p:defaultEncoding="utf-8">
  		<property name="maxUploadSize" value="10485760" />
 	</bean>
 	
 		<!-- InterceptorLogging bean -->
	<bean id="interceptorLogging" class="com.kirey.kjcore.features.exception.InterceptorLogging" />
	
	<!-- AOP Logging config - Moved to KFuture -->
	<aop:config proxy-target-class="true">
        <aop:aspect id="loggingAspectKJCore" ref="interceptorLogging">
            <aop:pointcut id="loggingCommonKJCore"
                expression="execution(* com.kirey.kjcore..*.*(..))
                &amp;&amp; !execution(* com.kirey.kjcore.common.util.PrintingToConsole.*(..))     
                &amp;&amp; !execution(* com.kirey.kjcore.data.entity.*.*(..))" />
            <aop:around method="aroundMethod" pointcut-ref="loggingCommonKJCore" />
        </aop:aspect>
    </aop:config>
</beans>
