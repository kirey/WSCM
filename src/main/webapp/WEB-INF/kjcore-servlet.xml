<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
                        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
                        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.2.xsd
                        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">


	<!-- KJCore package scan -->
	<context:component-scan base-package="com.kirey.kjcore.api.restcontrollers" />
	<context:component-scan base-package="com.kirey.kfuture.api.restcontrollers" />

	<!-- InterceptorTranslator bean -->
	<bean id="interceptorTranslator" class="com.kirey.kjcore.features.internationalization.InterceptorTranslator" />
	
	<!-- AOP Translator config - Moved to KFuture -->
	<aop:config proxy-target-class="true">
        <aop:aspect id="translateAspectKJCore" ref="interceptorTranslator">
            <aop:pointcut id="translatePointKJCore"
                expression="execution(* com.kirey.kjcore.api..*.*(..))
                &amp;&amp; !execution(* com.kirey.kjcore.api.dto.*.*(..))
                &amp;&amp; !execution(* com.kirey.kjcore.api.restcontrollers.ReportController.generateReport(..))
                &amp;&amp; !execution(* com.kirey.kjcore.api.restcontrollers.AdminTranslationController.getSection(..))
                &amp;&amp; !execution(* com.kirey.kjcore.api.restcontrollers.AdminTranslationController.getModule(..))
                &amp;&amp; !execution(* com.kirey.kjcore.api.restcontrollers.AdminTranslationController.getTranslation(..))" />
            <aop:around method="aroundMethod" pointcut-ref="translatePointKJCore" />
        </aop:aspect>
    </aop:config>

	<mvc:annotation-driven />
	<mvc:default-servlet-handler />

</beans>
